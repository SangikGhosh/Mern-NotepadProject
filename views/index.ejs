<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md px-5 py-2 bg-zinc-800" type="text" placeholder="Write filename(don't use only symbol)" name="title">
                <textarea class="block w-full rounded-md px-5 mt-2 py-2 resize-none bg-zinc-800" placeholder="Write your task detail here" name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-4 py-2 rounded-md cursor-pointer hover:bg-blue-700 transition duration-300" type="submit" value="Create file">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if(files.length > 0) { %>
                <% files.forEach(function(values) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= values %></h1>
                        <a class="text-blue-600 inline-block mt-3" href="/read/<%= values %>">Read file</a>                        
                        <br>
                        <a  class="text-red-600 inline-block" href="/delete/<%= values %>">Delete</a> 
                        <br>
                        <a href="/edit/<%= values %>"><button class="text-yellow-500 inline-block">Edit name</button></a>
                    </div>
                <% }) %>
            <% } else { %>
                <h4 class="text-zinc-400 text-xl tracking-tighter">No tasks yet</h4>
            <% } %>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/8dnhl5bq7cqj8z5F5x1z4IbUss5N44B/41Ffbl" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gybP7h0E3BTzoxF9E3sFxsxzRtmwaZ68kZmw72k30W7pxKqF6B" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-QhxGm5xsmMyKXUOpe7U6/0MGf90G8XwaQU1Hh5HAdKaZZy6l4z3ehSVxmPykpz5J" crossorigin="anonymous"></script>
</body>
</html>


